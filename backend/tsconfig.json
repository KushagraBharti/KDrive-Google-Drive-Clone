{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "lib": ["ES2020"],
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": { "@/*": ["src/*"] },
      "skipLibCheck": true,
      "ignoreDeprecations": "6.0"
    },
    "include": ["src"]
  }
  